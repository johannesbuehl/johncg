	"scripts": {
		"lint": "eslint .",
		"format-check": "prettier --check src/",
		"format-write": "prettier --write src/",
		"build": "node build-scripts/build-build.js && node build-scripts/build.js",
		"server-build": "node build-scripts/server-release.js",
		"server-debug": "node build-scripts/server-debug.js",
		"templates-build": "node build-scripts/templates-build.js",
		"templates-watch": "node build-scripts/templates-watch.js",
		"client-dev": "vite -c src/client/vite.config.ts",
		"client-build": "run-p client-type-check \"client-build-only {@}\" --",
		"client-preview": "vite -c src/client/vite.config.ts preview",
		"client-build-only": "vite -c src/client/vite.config.ts build",
		"client-type-check": "vue-tsc --noEmit -p src/client/tsconfig.json",
		"prepare": "husky",
		"pandoc-build": "node build-scripts/pandoc-build.js"
	},
